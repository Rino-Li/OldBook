<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/card_background_selector"
    >
    <ImageView
        android:id="@+id/renthistory_bookpic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/renthistory_bookname"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="123"
        android:layout_toRightOf="@+id/renthistory_bookpic"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@drawable/item_color"
        android:layout_centerVertical="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_below="@+id/renthistory_bookpic"
        >
        <TextView
            android:id="@+id/renthistory_nowdate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/standardgreen"
            android:textSize="10sp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="10sp"
            android:text="è‡³"/>
        <TextView
            android:id="@+id/renthistory_enddate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/standardgreen"
            android:textSize="10sp"
            />
    </LinearLayout>

</RelativeLayout>